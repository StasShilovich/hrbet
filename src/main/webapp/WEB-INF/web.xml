<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <display-name>Web Application</display-name>
    <servlet>
        <servlet-name>DispatcherServlet</servlet-name>
        <servlet-class>com.shilovich.hrbet.controller.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DispatcherServlet</servlet-name>
        <url-pattern>/dispatcher</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.shilovich.hrbet.controller.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.shilovich.hrbet.controller.filter.SecurityFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UrlTransformationFilter</filter-name>
        <filter-class>com.shilovich.hrbet.controller.filter.UrlTransformationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/hrbets/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UrlTransformationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/pages/error/pages-404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/pages/error/pages-500.jsp</location>
    </error-page>
</web-app>